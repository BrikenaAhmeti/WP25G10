@page
@model LoginModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Sign in";
}

<h2 class="h4 mb-2">Sign in</h2>
<p class="text-muted small mb-4">
    Use your AeroPulse Airport System admin or staff account.
</p>

<form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="mb-3">
        <label asp-for="Input.EmailOrUsername" class="form-label"></label>
        <input asp-for="Input.EmailOrUsername"
               class="form-control"
               autocomplete="username"
               type="text" />
        <span asp-validation-for="Input.EmailOrUsername" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <div class="d-flex justify-content-between">
            <label asp-for="Input.Password" class="form-label"></label>
            <a asp-page="./ForgotPassword" class="small text-decoration-none">
                Forgot password?
            </a>
        </div>
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Input.RememberMe" />
        <label class="form-check-label" asp-for="Input.RememberMe"></label>
    </div>

    <button id="login-submit" type="submit" class="btn btn-primary w-100">
        Log in
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
