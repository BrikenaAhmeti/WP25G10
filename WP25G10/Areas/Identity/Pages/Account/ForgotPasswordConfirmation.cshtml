@page
@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Reset link sent";
}

<h2 class="h4 mb-2">Check your email</h2>
<p class="text-muted small mb-4">
    If an account exists for the address you entered, we’ve sent instructions to reset your password.
</p>

<a asp-page="./Login" class="btn btn-primary w-100">
    Back to sign in
</a>
