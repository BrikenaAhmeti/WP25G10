@page
@model IndexModel
@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row mb-3">
    <div class="col">
        <h1 class="h4 mb-1">My profile</h1>
        <p class="text-muted mb-0">Manage your account details and preferences.</p>
    </div>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row g-4 mt-1">
    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h2 class="h6 mb-3">Account menu</h2>
                <partial name="_ManageNav" />
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-0 pb-0">
                <h2 class="h6 mb-1">Profile details</h2>
                <p class="text-muted small mb-0">
                    Update your contact details used by the airport system.
                </p>
            </div>
            <div class="card-body">
                <div class="mb-4 d-flex align-items-center">
                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3"
                         style="width:56px;height:56px;">
                        <i class="bi bi-person-circle fs-3 text-primary"></i>
                    </div>
                    <div>
                        <div class="fw-semibold">@Model.Username</div>
                        <div class="text-muted small">
                            @User.Identity!.Name
                        </div>
                        <div class="mt-1">
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge rounded-pill role-badge-admin">
                                    <i class="bi bi-shield-lock me-1"></i> Admin
                                </span>
                            }
                            else if (User.IsInRole("Staff"))
                            {
                                <span class="badge rounded-pill role-badge-staff">
                                    <i class="bi bi-people me-1"></i> Staff
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">User name</label>
                        <input class="form-control" value="@Model.Username" disabled />
                        <div class="form-text">
                            User name is managed by the system.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
