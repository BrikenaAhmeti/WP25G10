@model WP25G10.Models.CheckInDesk

@{
    ViewData["Title"] = "Check-in desk details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">
            Terminal @Model.Terminal – Desk @Model.DeskNumber
        </h1>
        <div class="text-muted small">
            Check-in desk details and related flights.
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-1">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title mb-3">Desk information</h5>

                <dl class="row small mb-0">
                    <dt class="col-sm-4">Terminal</dt>
                    <dd class="col-sm-8">@Model.Terminal</dd>

                    <dt class="col-sm-4">Desk number</dt>
                    <dd class="col-sm-8">@Model.DeskNumber</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    @if (Model.CreatedByUser != null)
                    {
                        <dt class="col-sm-4">Created by</dt>
                        <dd class="col-sm-8">@Model.CreatedByUser.UserName</dd>
                    }
                </dl>
            </div>
        </div>
    </div>

</div>

@if (Model.Flights != null && Model.Flights.Any())
{
    <h5 class="mb-3">Recent flights at this desk</h5>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle small">
            <thead class="table-light">
                <tr>
                    <th>Flight #</th>
                    <th>Airline</th>
                    <th>Destination</th>
                    <th>Departure</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model.Flights
                  .OrderByDescending(x => x.DepartureTime)
                  .Take(10))
                {
                    <tr>
                        <td>@f.FlightNumber</td>
                        <td>@f.Airline?.Name</td>
                        <td>@f.DestinationAirport</td>
                        <td>@f.DepartureTime.ToString("dd MMM yyyy HH:mm")</td>
                        <td>
                            <span class="badge bg-light text-dark">
                                @f.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
