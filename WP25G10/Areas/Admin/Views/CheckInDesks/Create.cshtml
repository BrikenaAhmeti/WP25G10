@model WP25G10.Models.CheckInDesk

@{
    ViewData["Title"] = "Create check-in desk";
}

<h1 class="h4 mb-3">Create check-in desk</h1>

<form asp-area="Admin" asp-controller="CheckInDesks" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- ✅ Shfaq krejt gabimet (edhe model-level) -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Terminal" class="form-label"></label>
        <input asp-for="Terminal" class="form-control" />
        <span class="form-text">Example: T1, T2, A, B...</span>
        <span asp-validation-for="Terminal" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DeskNumber" class="form-label"></label>
        <input asp-for="DeskNumber" class="form-control" />
        <span asp-validation-for="DeskNumber" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label" asp-for="IsActive"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="Admin" asp-controller="CheckInDesks" asp-action="Index" class="btn btn-secondary ms-2">
        Back to list
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
