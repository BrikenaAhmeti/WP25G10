@model WP25G10.Models.ViewModels.StaffEditViewModel

@{
    ViewData["Title"] = "Edit staff";
}

<h1 class="h4 mb-3">Edit staff user</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <hr class="my-4" />
    <h6 class="mb-2">Flight permissions</h6>
    <div class="text-muted small mb-2">
        These permissions are stored as user claims. Changes may require the staff user to re-login.
    </div>

    <div class="form-check">
        <input asp-for="CanViewFlights" class="form-check-input" />
        <label asp-for="CanViewFlights" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="CanCreateFlights" class="form-check-input" />
        <label asp-for="CanCreateFlights" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="CanEditFlights" class="form-check-input" />
        <label asp-for="CanEditFlights" class="form-check-label"></label>
    </div>
    <div class="form-check mb-3">
        <input asp-for="CanDeleteFlights" class="form-check-input" />
        <label asp-for="CanDeleteFlights" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}