@model WP25G10.Models.ViewModels.StaffIndexViewModel

@{
    ViewData["Title"] = "Staff management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">Staff users</h1>
        <div class="text-muted small">Add, edit, activate or deactivate staff accounts.</div>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i> Add staff
    </a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text"
                   name="search"
                   value="@Model.SearchTerm"
                   class="form-control"
                   placeholder="Search by name or email..." />
        </div>
    </div>

    <div class="col-md-3">
        <select asp-for="StatusFilter" class="form-select">
            <option value="all">All statuses</option>
            <option value="active">Active only</option>
            <option value="inactive">Inactive only</option>
        </select>
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-outline-primary">
            Apply
        </button>
        <a asp-action="Index" class="btn btn-link btn-sm">
            Reset
        </a>
    </div>
</form>

@if (Model.Staff.Count == 0)
{
    <div class="alert alert-info">
        No staff users found with the current filters. Try adjusting your search
        or use <strong>Add staff</strong> to create one.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>User name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th style="width: 260px;"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Staff)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@user.Id"
                           class="btn btn-sm btn-outline-secondary me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <form asp-action="ToggleActive" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit"
                                    class="btn btn-sm @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                @if (user.IsActive)
                                {
                                    <text><i class="bi bi-slash-circle"></i> Deactivate</text>
                                }
                                else
                                {
                                    <text><i class="bi bi-check-circle"></i> Activate</text>
                                }
                            </button>
                        </form>

                        <form asp-action="Delete" method="post" class="d-inline ms-1"
                              onsubmit="return confirm('Are you sure you want to delete this staff account?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    if (Model.TotalPages > 1)
    {
        <nav aria-label="Staff pagination">
            <ul class="pagination justify-content-end">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageNumber - 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-status="@Model.StatusFilter">
                        Previous
                    </a>
                </li>

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@Model.SearchTerm"
                           asp-route-status="@Model.StatusFilter">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageNumber + 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-status="@Model.StatusFilter">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
}