@model WP25G10.Models.ViewModels.AirlinesIndexViewModel

@{
    ViewData["Title"] = "Airlines";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">Airlines</h1>
        <div class="text-muted small">Manage airlines operating at the airport.</div>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i> Add Airline
    </a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-search"></i>
            </span>
            <input type="text"
                   name="search"
                   value="@Model.SearchTerm"
                   class="form-control"
                   placeholder="Search by name, code or country..." />
        </div>
    </div>

    <div class="col-md-3">
        <select name="status" class="form-select">
            @if (Model.StatusFilter == "active")
            {
                <option value="all">All statuses</option>
                <option value="active" selected>Active only</option>
                <option value="inactive">Inactive only</option>
            }
            else if (Model.StatusFilter == "inactive")
            {
                <option value="all">All statuses</option>
                <option value="active">Active only</option>
                <option value="inactive" selected>Inactive only</option>
            }
            else
            {
                <option value="all" selected>All statuses</option>
                <option value="active">Active only</option>
                <option value="inactive">Inactive only</option>
            }
        </select>
    </div>


    <div class="col-md-3">
        <button type="submit" class="btn btn-outline-primary">
            Apply
        </button>
        <a asp-action="Index" class="btn btn-link btn-sm">
            Reset
        </a>
    </div>
</form>

@if (!Model.Airlines.Any())
{
    <div class="alert alert-info">
        No airlines found with the current filters. Try adjusting your search.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Country</th>
                    <th>Logo</th>
                    <th>Status</th>
                    <th style="width: 180px;"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Airlines)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.Country</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.LogoUrl))
                        {
                            <img src="@item.LogoUrl" alt="@item.Name" style="height:32px;" />
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-secondary me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteAirlineModal"
                                data-id="@item.Id"
                                data-name="@item.Name">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    if (Model.TotalPages > 1)
    {
        <nav aria-label="Airlines pagination">
            <ul class="pagination justify-content-end">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageNumber - 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-status="@Model.StatusFilter">
                        Previous
                    </a>
                </li>

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@Model.SearchTerm"
                           asp-route-status="@Model.StatusFilter">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageNumber + 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-status="@Model.StatusFilter">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
}

<div class="modal fade" id="deleteAirlineModal" tabindex="-1" aria-labelledby="deleteAirlineModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteAirlineModalLabel">Delete airline</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="delete-airline-id" />
                    <p>
                        Are you sure you want to delete
                        <strong id="delete-airline-name"></strong>?
                    </p>
                    <p class="mb-0 text-muted small">
                        This will remove the airline from the system. Related flights may need to be updated manually.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteModal = document.getElementById('deleteAirlineModal');
            if (!deleteModal) return;

            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var airlineId = button.getAttribute('data-id');
                var airlineName = button.getAttribute('data-name');

                var idInput = deleteModal.querySelector('#delete-airline-id');
                var nameSpan = deleteModal.querySelector('#delete-airline-name');

                idInput.value = airlineId;
                nameSpan.textContent = airlineName;
            });
        });
    </script>
}