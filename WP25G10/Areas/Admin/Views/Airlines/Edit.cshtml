@model WP25G10.Models.Airline

@{
    ViewData["Title"] = "Edit Airline";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">Edit Airline</h1>
        <div class="text-muted small">Update airline details.</div>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Back to list
    </a>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Code" class="form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Country" class="form-label"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.LogoUrl))
    {
        <div class="mb-3">
            <label class="form-label">Current logo</label>
            <div>
                <img src="@Model.LogoUrl" alt="@Model.Name" style="height:48px;" />
            </div>
        </div>
    }

    <div class="mb-3">
        <label class="form-label">New logo (upload)</label>
        <input type="file" name="logoFile" class="form-control" accept="image/*" />
        <div class="form-text">
            Leave empty to keep the current logo. If you upload a new file,
            it will replace the existing logo (and override the URL below).
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="LogoUrl" class="form-label"></label>
        <input asp-for="LogoUrl" class="form-control" />
        <span class="form-text">
            Optional: direct image URL. If you upload a new file this will be updated automatically.
        </span>
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label" asp-for="IsActive"></label>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-lg"></i> Save changes
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
