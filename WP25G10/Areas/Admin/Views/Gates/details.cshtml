@model WP25G10.Models.Gate

@{
    ViewData["Title"] = "Gate details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">Gate @Model.Code</h1>
        <div class="text-muted small">Details for terminal @Model.Terminal.</div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="btn btn-outline-secondary btn-sm me-1">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Terminal</dt>
            <dd class="col-sm-9">@Model.Terminal</dd>

            <dt class="col-sm-3">Gate code</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">Gate status</dt>
            <dd class="col-sm-9">
                @if (Model.Status == WP25G10.Models.GateStatus.Open)
                {
                    <span class="badge bg-success">Open</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.Status</span>
                }
            </dd>

            <dt class="col-sm-3">Active</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>

            <dt class="col-sm-3">Created by</dt>
            <dd class="col-sm-9">
                @Model.CreatedByUser?.UserName ?? "Unknown"
            </dd>

            <dt class="col-sm-3">Assigned flights</dt>
            <dd class="col-sm-9">
                @(Model.Flights?.Count ?? 0)
            </dd>
        </dl>
    </div>
</div>

@if (Model.Flights != null && Model.Flights.Any()) {
    <div class="card">
        <div class="card-header">
            <strong>Flights using this gate</strong>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Flight</th>
                            <th>Airline</th>
                            <th>Destination</th>
                            <th>Departure time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model.Flights)
                        {
                            <tr>
                                <td>@f.FlightNumber</td>
                                <td>@f.Airline?.Name</td>
                                <td>@f.DestinationAirport</td>
                                <td>@f.DepartureTime.ToString("dd MMM yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
