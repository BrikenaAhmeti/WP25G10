@model WP25G10.Models.ViewModels.GatesIndexViewModel

@{
    ViewData["Title"] = "Gates";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-0">Gates</h1>
        <div class="text-muted small">Manage boarding gates by terminal and status.</div>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-lg me-1"></i> Add gate
    </a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-search"></i>
            </span>
            <input type="text"
                   name="search"
                   value="@Model.SearchTerm"
                   class="form-control"
                   placeholder="Search by terminal or gate code..." />
        </div>
    </div>

    <div class="col-md-3">
        <select name="status" class="form-select">
            @if (Model.StatusFilter == "active")
            {
                <option value="all">All activity statuses</option>
                <option value="active" selected>Active only</option>
                <option value="inactive">Inactive only</option>
            }
            else if (Model.StatusFilter == "inactive")
            {
                <option value="all">All activity statuses</option>
                <option value="active">Active only</option>
                <option value="inactive" selected>Inactive only</option>
            }
            else
            {
                <option value="all" selected>All activity statuses</option>
                <option value="active">Active only</option>
                <option value="inactive">Inactive only</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="gateState" class="form-select">
            @if (Model.GateStatusFilter == "open")
            {
                <option value="all">All gate statuses</option>
                <option value="open" selected>Open only</option>
                <option value="closed">Closed only</option>
            }
            else if (Model.GateStatusFilter == "closed")
            {
                <option value="all">All gate statuses</option>
                <option value="open">Open only</option>
                <option value="closed" selected>Closed only</option>
            }
            else
            {
                <option value="all" selected>All gate statuses</option>
                <option value="open">Open only</option>
                <option value="closed">Closed only</option>
            }
        </select>
    </div>

    <input type="hidden" name="sort" value="@Model.SortOrder" />

    <div class="col-md-2 d-flex gap-2">
        <button type="submit" class="btn btn-outline-primary flex-grow-1">
            Apply
        </button>
        <a asp-action="Index" asp-route-reset="true" class="btn btn-link btn-sm">
            Reset
        </a>
    </div>
</form>

@if (!Model.Gates.Any())
{
    <div class="alert alert-info">
        No gates found with the current filters. Try adjusting your search.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-sort="@(Model.SortOrder == "code_asc" ? "code_desc" : "code_asc")"
                           asp-route-search="@Model.SearchTerm"
                           asp-route-status="@Model.StatusFilter"
                           asp-route-gateState="@Model.GateStatusFilter"
                           asp-route-page="@Model.PageNumber"
                           class="text-decoration-none text-dark">
                            Gate code
                            @if (!string.IsNullOrEmpty(Model.SortOrder) &&
                               Model.SortOrder.StartsWith("code_"))
                            {
                                <i class="bi @(Model.SortOrder == "code_asc"
                                                ? "bi-caret-up-fill"
                                                : "bi-caret-down-fill") ms-1"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sort="@(Model.SortOrder == "terminal_asc" ? "terminal_desc" : "terminal_asc")"
                           asp-route-search="@Model.SearchTerm"
                           asp-route-status="@Model.StatusFilter"
                           asp-route-gateState="@Model.GateStatusFilter"
                           asp-route-page="@Model.PageNumber"
                           class="text-decoration-none text-dark">
                            Terminal
                            @if (!string.IsNullOrEmpty(Model.SortOrder) &&
                               Model.SortOrder.StartsWith("terminal_"))
                            {
                                <i class="bi @(Model.SortOrder == "terminal_asc"
                                                ? "bi-caret-up-fill"
                                                : "bi-caret-down-fill") ms-1"></i>
                            }
                        </a>
                    </th>
                    <th>Gate status</th>
                    <th>Active</th>
                    <th style="width: 220px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var g in Model.Gates)
                {
                    <tr>
                        <td>@g.Code</td>
                        <td>@g.Terminal</td>
                        <td>
                            @if (g.Status == WP25G10.Models.GateStatus.Open)
                            {
                                <span class="badge bg-success">Open</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@g.Status</span>
                            }
                        </td>
                        <td>
                            @if (g.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@g.Id"
                               class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@g.Id"
                               class="btn btn-sm btn-outline-secondary me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <button type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteGateModal"
                                    data-id="@g.Id"
                                    data-terminal="@g.Terminal"
                                    data-code="@g.Code">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    if (Model.TotalPages > 1)
    {
        <nav aria-label="Gates pagination">
            <ul class="pagination justify-content-end">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageNumber - 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-status="@Model.StatusFilter"
                       asp-route-gateState="@Model.GateStatusFilter"
                       asp-route-sort="@Model.SortOrder">
                        Previous
                    </a>
                </li>

                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@Model.SearchTerm"
                           asp-route-status="@Model.StatusFilter"
                           asp-route-gateState="@Model.GateStatusFilter"
                           asp-route-sort="@Model.SortOrder">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageNumber + 1)"
                       asp-route-search="@Model.SearchTerm"
                       asp-route-status="@Model.StatusFilter"
                       asp-route-gateState="@Model.GateStatusFilter"
                       asp-route-sort="@Model.SortOrder">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
}

<div class="modal fade" id="deleteGateModal" tabindex="-1" aria-labelledby="deleteGateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteGateModalLabel">Delete gate</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="delete-gate-id" />
                    <p>
                        Are you sure you want to delete gate
                        <strong id="delete-gate-code"></strong>
                        in terminal <strong id="delete-gate-terminal"></strong>?
                    </p>
                    <p class="mb-0 text-muted small">
                        This will remove the gate from the system. Related flights may need to be updated manually.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>document.addEventListener('DOMContentLoaded', function () {
            var modal = document.getElementById('deleteGateModal');
            if (!modal) return;

            modal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                var terminal = button.getAttribute('data-terminal');
                var code = button.getAttribute('data-code');

                modal.querySelector('#delete-gate-id').value = id;
                modal.querySelector('#delete-gate-terminal').textContent = terminal;
                modal.querySelector('#delete-gate-code').textContent = code;
            });
        });</script>
}