@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] · AeroPulse Airport</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="admin-body">
    <div class="admin-wrapper">
        <nav id="adminSidebar" class="admin-sidebar d-flex flex-column bg-white">
            <div class="p-3 border-bottom d-flex align-items-center">
                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                     style="width:36px;height:36px; overflow:hidden;">
                    <img src="~/airport-logo.png"
                         alt="AeroPulse Airport"
                         style="width:24px;height:24px;object-fit:contain;" />
                </div>
                <div>
                    <div class="fw-semibold">AeroPulse Airport System</div>
                    <div class="small text-muted">
                        @(User.IsInRole("Admin") ? "Admin Panel" : "Staff Panel")
                    </div>
                </div>
            </div>

            <div class="px-3 py-2 border-bottom small">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-area="Identity"
                       asp-page="/Account/Manage/Index"
                       class="fw-semibold text-decoration-none text-dark">
                        @User.Identity!.Name
                    </a>
                    <div class="mt-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge rounded-pill role-badge-admin">Admin</span>
                        }
                        else if (User.IsInRole("Staff"))
                        {
                            <span class="badge rounded-pill role-badge-staff">Staff</span>
                        }
                    </div>
                }
            </div>

            <div class="flex-grow-1 overflow-auto">
                <ul class="nav nav-pills flex-column py-2">
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                           class="nav-link @(controller == "Home" ? "active" : "")">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item mt-3 px-3 small text-muted text-uppercase">Management</li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Airlines" asp-action="Index"
                               class="nav-link @(controller == "Airlines" ? "active" : "")">
                                <i class="bi bi-building me-2"></i> Airlines
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Gates" asp-action="Index"
                               class="nav-link @(controller == "Gates" ? "active" : "")">
                                <i class="bi bi-door-open me-2"></i> Gates
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="CheckInDesks" asp-action="Index"
                               class="nav-link @(controller == "CheckInDesks" ? "active" : "")">
                                <i class="bi bi-grid-3x3-gap me-2"></i> Check-in Desks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Staff" asp-action="Index"
                               class="nav-link @(controller == "Staff" ? "active" : "")">
                                <i class="bi bi-people-fill me-2"></i> Staff
                            </a>
                        </li>
                    }

                    <li class="nav-item mt-3 px-3 small text-muted text-uppercase">Flights</li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Flights" asp-action="Index"
                           class="nav-link @(controller == "Flights" ? "active" : "")">
                            <i class="bi bi-airplane-engines me-2"></i> Flights
                        </a>
                    </li>
                </ul>
            </div>

            <div class="border-top p-3">
                <a href="https://wp-25-g10-frontend.vercel.app" target="_blank" class="d-block mb-2">
                    <i class="bi bi-globe2 me-2"></i> Public site
                </a>

                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-secondary w-100">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </button>
                </form>
            </div>
        </nav>

        <div class="admin-content">
            <nav class="navbar bg-white border-bottom px-3">
                <button class="btn btn-outline-secondary d-lg-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <div class="ms-auto small text-muted">
                    @DateTime.Now.ToString("dd MMM yyyy")
                </div>
            </nav>

            <main class="flex-grow-1">
                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="border-top py-2 text-center small text-muted bg-white">
                &copy; @DateTime.Now.Year – AeroPulse Airport System
            </footer>
        </div>
    </div>

    <div id="sidebarBackdrop" class="admin-backdrop d-lg-none"></div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("adminSidebar");
            const toggle = document.getElementById("sidebarToggle");
            const backdrop = document.getElementById("sidebarBackdrop");

            function isMobile() {
                return window.innerWidth < 992;
            }

            function openSidebar() {
                sidebar.classList.add("admin-sidebar-collapsed");
                backdrop.classList.add("show");
                document.body.style.overflow = "hidden";
            }

            function closeSidebar() {
                sidebar.classList.remove("admin-sidebar-collapsed");
                backdrop.classList.remove("show");
                document.body.style.overflow = "";
            }

            toggle?.addEventListener("click", () => {
                if (!isMobile()) return;
                sidebar.classList.contains("admin-sidebar-collapsed") ? closeSidebar() : openSidebar();
            });

            backdrop?.addEventListener("click", closeSidebar);

            sidebar?.addEventListener("click", e => {
                if (e.target.closest("a") && isMobile()) closeSidebar();
            });

            window.addEventListener("resize", () => {
                if (!isMobile()) closeSidebar();
            });
        });</script>

    @RenderSection("Scripts", required: false)
</body>
</html>