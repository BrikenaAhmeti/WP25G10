@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Airport Operations Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <div class="admin-wrapper d-flex">
        <nav id="adminSidebar" class="admin-sidebar d-flex flex-column">
            <div class="p-3 border-bottom d-flex align-items-center">
                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2"
                     style="width: 36px; height: 36px;">
                    <i class="bi bi-airplane-fill text-primary"></i>
                </div>
                <div>
                    <div class="fw-semibold text-black">Airport System</div>
                    <div class="small text-black-50">Admin Panel</div>
                </div>
            </div>

            <div class="px-3 py-2 border-bottom small text-white-50">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-area="Identity"
                       asp-page="/Account/Manage/Index"
                       class="d-flex align-items-center text-black text-decoration-none">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>@User.Identity!.Name</span>
                    </a>
                    <div class="mt-1 text-black">
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge rounded-pill role-badge-admin">
                                <i class="bi bi-shield-lock me-1"></i> Admin
                            </span>
                        }
                        else if (User.IsInRole("Staff"))
                        {
                            <span class="badge rounded-pill role-badge-staff">
                                <i class="bi bi-people me-1"></i> Staff
                            </span>
                        }
                    </div>
                }
            </div>

            <div class="flex-grow-1 overflow-auto">
                <ul class="nav nav-pills flex-column py-2">
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                           class="nav-link admin-nav-link @(controller == "Home" ? "active" : "")">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Dashboard
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item mt-3 px-3 text-uppercase small text-black-50">
                            Management
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Airlines" asp-action="Index"
                               class="nav-link admin-nav-link @(controller == "Airlines" ? "active" : "")">
                                <i class="bi bi-building me-2"></i>
                                Airlines
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Gates" asp-action="Index"
                               class="nav-link admin-nav-link @(controller == "Gates" ? "active" : "")">
                                <i class="bi bi-door-open me-2"></i>
                                Gates
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="CheckInDesks" asp-action="Index"
                               class="nav-link admin-nav-link @(controller == "CheckInDesks" ? "active" : "")">
                                <i class="bi bi-grid-3x3-gap me-2"></i>
                                Check-in Desks
                            </a>
                        </li>
                    }

                    <li class="nav-item mt-3 px-3 text-uppercase small text-black-50">
                        Flights
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Flights" asp-action="Index"
                           class="nav-link admin-nav-link @(controller == "Flights" ? "active" : "")">
                            <i class="bi bi-airplane-engines me-2"></i>
                            Flights
                        </a>
                    </li>
                </ul>
            </div>
            <div class="border-top p-3 small text-white-50">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="text-decoration-none text-white-50 d-block mb-2">
                    <i class="bi bi-globe2 me-2"></i>
                    Public site
                </a>

                @if (SignInManager.IsSignedIn(User))
                {
                    <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-light w-100">
                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                        </button>
                    </form>
                }
            </div>
        </nav>
        <div class="admin-content flex-grow-1 d-flex flex-column">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-3">
                <button class="btn btn-outline-secondary d-lg-none me-2" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>

                <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                    Airport Operations Manager
                </a>

                <div class="ms-auto d-flex align-items-center gap-3 small">
                    <span class="text-muted d-none d-md-inline">
                        @DateTime.Now.ToString("dd MMM yyyy")
                    </span>
                </div>
            </nav>
            <main class="flex-grow-1">
                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="border-top py-2 bg-white text-center small text-muted">
                &copy; @DateTime.Now.Year - Airport Operations Manager
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("adminSidebar");
            const toggle = document.getElementById("sidebarToggle");

            if (toggle && sidebar) {
                toggle.addEventListener("click", function () {
                    sidebar.classList.toggle("admin-sidebar-collapsed");
                });
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
